<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container mt-5">
        <% if (posts.length > 0) { %>
            <div class="list-group">
                <% posts.forEach(post => { %>
                    <div class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.content %></p>
                        <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/edit/<%= post.id %>" class="btn btn-warning">Edit</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">No posts available.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76A2VI6PQT1z3Th/JPR3pcXtKbxMA5d2ueh7mAz7sWjUW3k0K0tptk5KIAt6gBP" crossorigin="anonymous"></script>
</body>
